<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_flow"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/fragmentHome"
        tools:layout="@layout/fragment_home"
        android:name="com.mekanly.presentation.ui.fragments.flow.FragmentFlow"
        android:label="fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_filterFragment"
            app:destination="@id/filterFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_languageFragment"
            app:destination="@id/languageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_homeFragment_to_fragmentSingleHouse"
            app:destination="@id/fragmentSingleHouse"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/filterFragment"
        android:name="com.mekanly.presentation.ui.fragments.filter.FilterFragment"
        android:label="FilterFragment">

        <action
            android:id="@+id/action_filterFragment_to_fragmentLocation"
            app:destination="@id/fragmentLocation"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_filterFragment_to_homeFragment"
            app:destination="@id/fragmentHome"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

    </fragment>

    <fragment
        android:id="@+id/languageFragment"
        android:name="com.mekanly.presentation.ui.fragments.language.LanguageFragment"
        android:label="LanguageFragment" />

    <fragment
        android:id="@+id/fragmentLocation"
        android:name="com.mekanly.presentation.ui.fragments.location.FragmentLocation"
        android:label="fragment_location"
        tools:layout="@layout/fragment_location" />

    <fragment
        android:id="@+id/fragmentSingleHouse"
        android:name="com.mekanly.presentation.ui.fragments.singleHouse.FragmentSingleHouse"
        android:label="fragment_single_house"
        tools:layout="@layout/fragment_single_house">
        <argument
            android:name="houseId"
            app:argType="long"
            android:defaultValue="-1L" />
    </fragment>


</navigation>