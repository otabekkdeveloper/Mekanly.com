    <!-- В values/styles.xml создайте стиль для RangeSlider -->
    <style name="CustomRangeSliderStyle" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
    </style>

    <!-- Затем создайте тему наложения для слайдера -->
    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/bg_blue_three</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="sliderStyle">@style/Widget.App.Slider</item>
    </style>

    <!-- И, наконец, определите конкретные стили для виджета -->
    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="thumbRadius">10dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="trackHeight">1.2dp</item>
        <item name="haloRadius">24dp</item>
        <item name="thumbElevation">2dp</item>
    </style>






