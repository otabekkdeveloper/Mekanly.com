<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.profile.AddHouseFragment">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/jay_goshmakk"
        android:maxHeight="225dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/camera_profile_bg"
        app:icon="@drawable/ic_camera"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentEnd="true"
    />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="12dp"
        android:layout_marginTop="-65dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginStart="-16dp"
        android:layout_below="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView4"
        android:background="@drawable/camera_icon" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:paddingStart="11dp"
        android:paddingTop="10dp"
        android:text="Rowaç mebel"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="11dp"
        android:paddingTop="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_eye" />


        <TextView
            android:id="@+id/viewing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="100k+"
            android:textColor="@color/white" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        app:iconSize="16dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/imageView2"
        android:text="Habarlaşmak"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_contact_profile"
        app:icon="@drawable/ic_teswirler" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:paddingTop="8dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:background="@color/color_transparent"
        app:tabIconTint="@color/white"
        app:tabTextAppearance="@style/TabTextAppearanceTwo"
        app:tabTextColor="@color/text_color_white" />

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp" />


</RelativeLayout>