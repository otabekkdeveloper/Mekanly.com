<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="@color/white_20"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:elevation="0dp"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                app:contentScrim="@android:color/transparent"
                android:elevation="0dp"
                app:extraMultilineHeightEnabled="true"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/constraintLayout"
                    android:background="@color/background"
                    android:paddingVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/input_search"
                        android:elevation="2dp"
                        android:drawableStart="@drawable/search"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:drawablePadding="10dp"
                        android:paddingVertical="10dp"
                        android:background="@drawable/bg_search_fragment"
                        android:fontFamily="@font/manrope_regular"
                        android:hint="Gözleg"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:paddingStart="16dp"
                        android:textColorHint="@color/text_color_grey"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="HardcodedText" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/outlinedButton"
                        style="@style/Widget.MaterialComponents.TimePicker.ImageButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        app:backgroundTint="@color/background"
                        app:cornerRadius="1000dp"
                        app:elevation="0dp"
                        app:icon="@drawable/filter_icon"
                        app:iconTint="@color/white"
                        app:layout_constraintBottom_toBottomOf="@+id/editText"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/editText"
                        app:layout_constraintTop_toTopOf="@+id/editText"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp" />

                </LinearLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_20"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/cr_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp"
                app:layout_constraintTop_toBottomOf="@id/constraintLayout">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_in_search_fragment_text_view"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Aşgabat şäheri"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/location_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_in_search_fragment_text_view"
                    android:drawableTint="@color/black"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Emläk gözleýänler"
                    android:textSize="12sp"
                    app:drawableStartCompat="@drawable/ic_house_search" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_in_search_fragment_text_view"
                    android:gravity="center"
                    android:padding="6dp"
                    app:drawableStartCompat="@drawable/ic_category" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cr_buttons"/>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</layout>

