<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:outlineSpotShadowColor="@color/black"
    android:outlineAmbientShadowColor="@color/black"
    android:layout_height="match_parent"
    tools:targetApi="p">

    <LinearLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlSymmetry">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/input_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_search_fragment"
                android:drawableStart="@drawable/search"
                android:drawablePadding="10dp"
                android:elevation="2dp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Gözleg"
                android:inputType="text"
                android:paddingVertical="10dp"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/text_color_gray"
                android:textSize="14sp"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_filter"
                style="@style/Widget.MaterialComponents.TimePicker.ImageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                app:backgroundTint="@color/background"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_filter"
                app:iconTint="@color/white"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp" />

        </LinearLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_bar"
            app:indicatorColor="@color/bg_app"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:indeterminate="true" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/coordinatorLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:elevation="0dp"
            app:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:contentScrim="@android:color/transparent"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="48dp"
                app:extraMultilineHeightEnabled="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:scrollbars="none"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:id="@+id/cr_buttons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="10dp"
                            app:layout_constraintTop_toBottomOf="@id/constraintLayout">

                            <LinearLayout
                                android:layout_weight="1"
                                android:id="@+id/btn_locations"
                                android:gravity="center"
                                android:paddingHorizontal="15dp"
                                android:background="@drawable/bg_unselected_in_search_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp">

                                <ImageView
                                    android:id="@+id/ic_location"
                                    app:tint="@color/text_color_gray"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/location_icon"/>

                                <TextView
                                    android:id="@+id/nameLocations"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/text_color_gray"
                                    android:layout_marginStart="5dp"
                                    android:text="Ýerleşýän ýeri"/>


                                <ImageView
                                    android:id="@+id/ic_down"
                                    app:tint="@color/text_color_gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:src="@drawable/ic_down"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:id="@+id/btnCategories"
                                android:layout_marginStart="8dp"
                                android:gravity="center"
                                android:paddingHorizontal="15dp"
                                android:background="@drawable/bg_unselected_in_search_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp">

                                <ImageView
                                    android:id="@+id/icCategories"
                                    app:tint="@color/text_color_gray"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_category"/>

                                <TextView
                                    android:id="@+id/textCategory"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_color_gray"
                                    android:fontFamily="@font/roboto_regular"
                                    android:layout_marginStart="5dp"
                                    android:text="Kategoriýa"/>


                                <ImageView
                                    android:id="@+id/icDownCategories"
                                    app:tint="@color/text_color_gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:src="@drawable/ic_down"/>


                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/btnPrice"
                                android:gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:paddingHorizontal="15dp"
                                android:background="@drawable/bg_unselected_in_search_fragment"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp">

                                <ImageView
                                    android:id="@+id/icPrice"
                                    app:tint="@color/text_color_gray"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_price"/>

                                <TextView
                                    android:id="@+id/priceText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/roboto_regular"
                                    android:textColor="@color/text_color_gray"
                                    android:layout_marginStart="5dp"
                                    android:text="Bahasy"/>


                                <ImageView
                                    android:id="@+id/icPriceDown"
                                    app:tint="@color/text_color_gray"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:src="@drawable/ic_down"/>


                            </LinearLayout>


                        </LinearLayout>
                    </HorizontalScrollView>




                </LinearLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout2">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cr_buttons" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
