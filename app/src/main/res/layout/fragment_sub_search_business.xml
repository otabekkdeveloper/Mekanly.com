<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".presentation.ui.fragments.businessProfile.SubSearchBusinessFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry">


        <ImageView
            android:id="@+id/backBtn"
            android:layout_marginEnd="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_back"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/input_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_search_fragment"
            android:drawableStart="@drawable/search"
            android:drawablePadding="10dp"
            android:elevation="2dp"
            android:fontFamily="@font/roboto_medium"
            android:hint="Gözleg"
            android:inputType="text"
            android:paddingVertical="10dp"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textColorHint="@color/text_color_gray"
            android:textSize="14sp"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_filter"
            style="@style/Widget.MaterialComponents.TimePicker.ImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            app:backgroundTint="@color/background"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_filter"
            app:iconTint="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="1dp" />



    </LinearLayout>



    <LinearLayout
        android:id="@+id/cr_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Bildirişler"/>


        <TextView
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biznes profiller"/>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSubSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






</LinearLayout>