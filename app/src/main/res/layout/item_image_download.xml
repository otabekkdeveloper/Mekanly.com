<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp">


    <FrameLayout
        android:layout_width="100dp"
        android:background="@android:color/darker_gray"
        android:layout_height="100dp">


        <TextView
            android:id="@+id/mainImageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:background="@color/success"
            android:padding="3dp"
            android:text="Esasy surat"
            android:textColor="@color/white"
            android:textSize="8sp" />

        <!-- ImageView для отображения картинки -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <!-- ProgressBar для отображения процента загрузки -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:max="100"
            android:progress="0"
            android:visibility="visible" />

        <!-- TextView для отображения процента загрузки -->
        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0%"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible" />

        <!-- Иконка галочки (птичка) -->
        <ImageView
            android:id="@+id/checkIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_like"
            android:visibility="gone" />

        <!-- Кнопка "X" для удаления картинки -->
        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:visibility="gone" />
    </FrameLayout>


</androidx.cardview.widget.CardView>

