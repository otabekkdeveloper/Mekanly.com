<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Ýerleşýän ýeri"
        android:textSize="18sp"
        android:textStyle="bold" />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ahlisi"/>

    <CheckBox
        android:id="@+id/checkbox_city1"
        android:layout_width="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:layout_height="wrap_content"
        android:text="Aşgabat şäheri" />

    <CheckBox
        android:id="@+id/checkbox_city2"
        android:fontFamily="@font/manrope_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arkadag şäheri" />

    <CheckBox

        android:id="@+id/checkbox_city3"
        android:layout_width="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:layout_height="wrap_content"
        android:text="Ahal welaýaty" />

    <CheckBox

        android:id="@+id/checkbox_city4"
        android:layout_width="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:layout_height="wrap_content"
        android:text="Balkan welaýaty" />

    <CheckBox
        android:id="@+id/checkbox_city5"
        android:layout_width="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:layout_height="wrap_content"
        android:text="Mary welaýaty" />

    <CheckBox
        android:id="@+id/checkbox_city6"
        android:layout_width="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:layout_height="wrap_content"
        android:text="Lebap welaýaty" />

    <CheckBox
        android:id="@+id/checkbox_city7"
        android:layout_width="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:layout_height="wrap_content"
        android:text="Daşoguz welaýaty" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manrope_regular"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btnGoybolsun"
            android:fontFamily="@font/manrope_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:text="GOÝBOLSUN"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btnKabulEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:background="@color/color_transparent"
            android:text="KABUL ET"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>
