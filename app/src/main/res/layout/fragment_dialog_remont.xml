<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:fontFamily="@font/manrope_bold"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="Remont görnüşi"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Чекбокс -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp">

        <CheckBox
            android:id="@+id/cbHemmesi"
            android:layoutDirection="rtl"
            android:layout_width="wrap_content"
            android:fontFamily="@font/manrope_regular"
            android:layout_height="wrap_content"
            android:text="Hemmesi" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:id="@+id/euro_remont"
                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:background="@drawable/emlakler_btn_bg"
                android:text="Ýewro remont"/>

            <TextView
                android:id="@+id/remont_cosmetic"
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:background="@drawable/emlakler_btn_bg"
                android:text="Kosmetiçeskiý"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/black"
                android:id="@+id/remont_designer"
                android:layout_height="wrap_content"
                android:background="@drawable/emlakler_btn_bg"
                android:text="Dizaýneriskiý"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/black"
                android:id="@+id/gos_remont"
                android:layout_height="wrap_content"
                android:background="@drawable/emlakler_btn_bg"
                android:text="Gos. remont"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/black"
                android:id="@+id/normal_remont"
                android:layout_height="wrap_content"
                android:background="@drawable/emlakler_btn_bg"
                android:text="Orta"/>

            <TextView
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/remont_etmeli"
                android:background="@drawable/emlakler_btn_bg"
                android:text="Remont etmeli"/>



        </LinearLayout>







    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">






    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">





    </LinearLayout>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <Button
            android:textColor="@color/black"
            android:id="@+id/btnGoybolsun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope_bold"
            android:background="@color/color_transparent"
            android:text="GOÝBOLSUN" />

        <Button
            android:textColor="@color/black"
            android:id="@+id/btnKabulEt"
            android:fontFamily="@font/manrope_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:text="KABUL ET" />
    </LinearLayout>

</LinearLayout>
