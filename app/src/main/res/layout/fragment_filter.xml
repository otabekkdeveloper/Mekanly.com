<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:icon="@drawable/ic_back"
                    app:iconGravity="textTop"
                    app:iconSize="30dp"
                    app:iconTint="@color/white" />

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/filter"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <!-- Dropdown for Bölüm -->

            <LinearLayout
                android:id="@+id/buttonBolum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_bold"
                    android:paddingStart="16dp"
                    android:paddingTop="16dp"
                    android:text="@string/section"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/bolumTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:text="@string/not_selected"
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                app:dividerColor="@color/line_divider" />


            <LinearLayout
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/manrope_bold"
                    android:paddingStart="16dp"
                    android:text="@string/location_text"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_regular"
                    android:paddingStart="16dp"
                    android:text="@string/not_selected"
                    android:textColor="@color/text_color_gray"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                app:dividerColor="@color/line_divider" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/manrope_bold"
                android:paddingStart="16dp"
                android:text="@string/rooms_number"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@color/color_transparent"
                android:paddingTop="8dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/allChips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="30dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:text="1"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/manrope_bold"
                android:paddingStart="16dp"
                android:text="@string/floor_number"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:paddingTop="8dp"
                android:scrollbars="none">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false">


                    <com.google.android.material.chip.Chip
                        android:id="@+id/allChipsTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp" />


                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />

                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11"
                        app:chipBackgroundColor="@color/white"
                        app:chipCornerRadius="20dp"
                        app:chipStrokeColor="@color/black"
                        app:chipStrokeWidth="1dp"
                        tools:ignore="HardcodedText" />
                </com.google.android.material.chip.ChipGroup>
            </HorizontalScrollView>


            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/customSwitch"
                style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:checked="false"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/show_only_status"
                android:textStyle="bold"
                app:thumbTint="@color/white"
                app:trackDecoration="@color/color_transparent"
                app:trackTint="@color/unchecked_track" />


            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/customSwitchTwo"
                style="@style/Widget.Material3.CompoundButton.MaterialSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:checked="false"
                android:fontFamily="@font/manrope_bold"
                android:text="@string/show_newly_added_properties"
                android:textStyle="bold"
                app:thumbTint="@color/white"
                app:trackDecoration="@color/color_transparent"
                app:trackTint="@color/unchecked_track" />


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                app:dividerColor="@color/line_divider" />

            <LinearLayout
                android:id="@+id/propertiesBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/property_type"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="end"
                    android:text="@string/not_selected"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_down"
                    tools:ignore="ContentDescription" />


            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                app:dividerColor="@color/line_divider" />


            <LinearLayout
                android:id="@+id/remont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/repair"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="end"
                    android:text="@string/not_selected"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_down"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                app:dividerColor="@color/line_divider" />

            <LinearLayout
                android:id="@+id/mumkinchilikler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_bold"
                    android:text="@string/possibilities"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_bold"
                    android:gravity="end"
                    android:text="@string/not_selected"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/ic_down"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                app:dividerColor="@color/line_divider" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioButton
                    android:id="@+id/radioBtnOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@color/color_transparent"
                    android:checked="true"
                    android:gravity="center"
                    android:text="Eýesi"
                    android:textColor="@color/radio_text_color"
                    android:textSize="14sp" />


                <RadioButton
                    android:id="@+id/radioBtnTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/radio_selector"
                    android:button="@color/color_transparent"
                    android:checked="false"
                    android:gravity="center"
                    android:text="Reiltor"
                    android:textColor="@color/radio_text_color"
                    android:textSize="14sp" />


            </RadioGroup>


            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                app:dividerColor="@color/line_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="16dp"
                android:text="@string/general_area"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />


            <LinearLayout
                android:layout_width="match_parent"

                android:layout_marginHorizontal="16dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/rangeSeekBar"
                    android:valueFrom="5"
                    android:valueTo="500"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:haloColor="@android:color/transparent"
                    app:tickColor="@android:color/black"
                    app:trackColorActive="@color/bg_blue_three"
                    app:trackColorInactive="@color/unchecked_track"
                    app:trackHeight="2dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="18dp"
                android:layout_marginTop="12dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minimum"/>


                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:text="20 m2"
                        android:background="@drawable/emlakler_btn_bg"/>



                </LinearLayout>


                <LinearLayout
                    android:gravity="end"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maksimum"/>


                    <TextView
                        android:layout_marginTop="8dp"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:text="500+ m2"
                        android:background="@drawable/emlakler_btn_bg"/>



                </LinearLayout>













            </LinearLayout>






            <TextView
